<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.Notice">
	<!-- 마이바티스는 resultMap사용 시 column속성 필수 -->
	<!-- type속성은 configuration.xml에 등록한 자바빈의 별칭임 -->
	<resultMap id="NoticeDtoResult" type="noticeDto">
	</resultMap>
	
	<!-- 쿼리 작성 -->
	<select id="noticeSelectList" resultType="noticeDto">
		SELECT * FROM notice ORDER BY postdate DESC
	</select>
	<select id="noticeSelectOne" resultType="noticeDto" parameterType="java.util.Map">
		SELECT * FROM notice WHERE no=#{no}
	</select>
</mapper>