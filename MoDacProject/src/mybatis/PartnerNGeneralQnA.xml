<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="mybatis.PartnerNAdminQnA">

    
    <!-- 전체 리스트 불러오는 부분 -->
    <select id="PartnerNGeneralQnAList" parameterType="java.util.Map" resultType="PartnerNAdminQnA">	
    
<!--     SELECT * FROM (SELECT T.*,ROWNUM R FROM (SELECT O.*,(SELECT COUNT(*) FROM HEALTHQUESTION WHERE NO = O.QNO) commentCount 
    FROM PQNA O JOIN PARTNERS M ON O.PID = M.PID WHERE M.PID= #{pid}  -->

    
    

 
    
    <if test="searchColumn !=null">
    
    	AND ${searchColumn} LIKE '%' || #{searchWord} || '%'
    		
    </if>
   
    ORDER BY no DESC)T) WHERE R BETWEEN #{start} AND #{end}
   
	</select>
    
  
    <!--  레코드 수 가져오는 부분 -->
   	<select id="PartnerNGeneralQnATotalRecord"  parameterType="java.util.Map" resultType="int">
   	
	SELECT COUNT(*) FROM HEALTHQUESTION WHERE SUBJECTCODE = #{subjectcode};
	
	<if test="searchColumn !=null">
   		WHERE ${searchColumn} LIKE '%' || #{searchWord} || '%'
   	</if>
	</select>

   
    <!-- SelectOne -->
	<select id="PartnerNGeneralQnAOne" parameterType="java.util.Map" resultType="PartnerNAdminQnA">

	SELECT Q.* FROM PQNA Q JOIN PARTNERS P ON P.PID = Q.PID WHERE no = #{no}
  
	</select>
	
	
	
    
  






	
	
</mapper>