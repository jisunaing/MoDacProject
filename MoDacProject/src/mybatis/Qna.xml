<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.Qna">
	<!-- 마이바티스는 resultMap사용 시 column속성 필수 -->
	<!-- type속성은 configuration.xml에 등록한 자바빈의 별칭임 -->
	<resultMap id="QnaDtoResult" type="qnaDto">
		<result property="no" column="no"/>
		<result property="title" column="title"/>
		<result property="content" column="content"/>
		<result property="postdate" column="postdate"/>
		<result property="genid" column="genid"/>
	</resultMap>
	
	<!-- 쿼리 작성 -->
	<insert id="qnaInsert" parameterType="java.util.Map">
		INSERT INTO qna VALUES(seq_qna.nextval, #{title}, #{content}, default,#{genid})
	</insert>
	<select id="qnaSelectList" parameterType="java.util.Map" resultType="qnaDto">
		select * from qna where genid=#{genid}
	</select>
	<select id="qnaSelectOne" parameterType="java.util.Map" resultType="qnaDto">
		select * from qna where no=#{no}
	</select>
	<update id="qnaUpdate" parameterType="java.util.Map">
		UPDATE qna SET title=#{title}, content=#{content} WHERE no=#{no}
	</update>
	<delete id="qnaDelete" parameterType="java.util.Map">
		DELETE FROM qna WHERE no=#{no}
	</delete>
</mapper>